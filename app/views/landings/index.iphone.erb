<% form_for :user, :url => logins_path, :html => {:id => 'login', :title => 'Login', :class => 'panel'} do |f| %>
  <h2>Login</h2>
  <fieldset>
    <div class="row">
      <%= f.label :username %>
      <%= f.text_field :username, :size => '' %>
    </div>
    <div class="row">
      <%= f.label :password %>
      <%= f.password_field :password, :size => '' %>
    </div>
  </fieldset>
  <a class="redButton" type="submit" href="#">Login</a>
<% end %>