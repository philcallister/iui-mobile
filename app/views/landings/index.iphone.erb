  <li class="group header1">Welcome to Citi Mobile Banking</li>
  <li><a href="#login"><%= image_tag("/images/mobile/login.png", :border => "0", :style => "vertical-align: middle;") %>&nbsp;Mobile Login</a></li>
  <li><a href="#about"><%= image_tag("/images/mobile/about.png", :border => "0", :style => "vertical-align: middle;") %>&nbsp;About Citi Mobile</a></li>
